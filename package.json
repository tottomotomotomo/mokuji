{
  "name": "mokuji",
  "displayName": "Mokuji",
  "publisher": "tottomotomotomo",
  "description": "Table of Contents generator for CSS, HTML, Markdown, JavaScript, and TypeScript files",
  "version": "0.0.2",
  "license": "MIT",
  "icon": "icon.png",
  "keywords": [
    "css",
    "scss",
    "less",
    "html",
    "markdown",
    "table of contents",
    "toc",
    "navigation",
    "outline",
    "comments",
    "mokuji",
    "heading",
    "javascript",
    "typescript",
    "jsdoc"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tottomotomotomo/mokuji.git"
  },
  "bugs": {
    "url": "https://github.com/tottomotomotomo/mokuji/issues"
  },
  "homepage": "https://github.com/tottomotomotomo/mokuji#readme",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less",
    "onLanguage:html",
    "onLanguage:markdown",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mokuji-explorer",
          "title": "Mokuji",
          "icon": "$(list-unordered)"
        }
      ]
    },
    "views": {
      "mokuji-explorer": [
        {
          "id": "mokujiView",
          "name": "Table of Contents"
        }
      ]
    },
    "configuration": {
      "title": "Mokuji",
      "properties": {
        "mokuji.customPatterns": {
          "type": "object",
          "default": {},
          "description": "Custom regex patterns for each language ID. Each key is a language ID, and the value has 'pattern' (regex string with group 1 for level hashes and group 2 for label) and 'enabled' (boolean).",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "pattern": {
                "type": "string",
                "description": "Regex pattern string. Group 1 must capture hash symbols (#) for level, group 2 must capture the label text."
              },
              "enabled": {
                "type": "boolean",
                "default": true,
                "description": "Enable or disable this custom pattern."
              }
            },
            "required": ["pattern"]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "16.x",
    "typescript": "^5.0.0"
  }
}