{
  "name": "mokuji",
  "displayName": "Mokuji",
  "publisher": "tottomotomotomo",
  "description": "Table of Contents generator for CSS, HTML, Markdown, JavaScript, and TypeScript files",
  "version": "0.0.2",
  "license": "MIT",
  "icon": "icon.png",
  "keywords": [
    "css",
    "scss",
    "less",
    "html",
    "markdown",
    "table of contents",
    "toc",
    "navigation",
    "outline",
    "comments",
    "mokuji",
    "heading",
    "javascript",
    "typescript",
    "jsdoc"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tottomotomotomo/mokuji.git"
  },
  "bugs": {
    "url": "https://github.com/tottomotomotomo/mokuji/issues"
  },
  "homepage": "https://github.com/tottomotomotomo/mokuji#readme",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mokuji-explorer",
          "title": "Mokuji",
          "icon": "$(list-unordered)"
        }
      ]
    },
    "views": {
      "mokuji-explorer": [
        {
          "id": "mokujiView",
          "name": "Table of Contents"
        }
      ]
    },
    "configuration": {
      "title": "Mokuji",
      "properties": {
        "mokuji.headingMarkers": {
          "type": "object",
          "default": {},
          "description": "Simple heading markers for each language ID. Each key is a language ID, and the value is an array of markers for each level. Example: { \"python\": [\"@\", \"$\", \"&\"] } means '# @ text' is level 1, '# $ text' is level 2, '# & text' is level 3.",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "maxItems": 6,
            "description": "Array of markers for levels 1-6. Example: [\"@\", \"$\", \"&\"] or [\"MARK:\", \"MARK::\", \"MARK:::\"]"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "16.x",
    "typescript": "^5.0.0"
  }
}